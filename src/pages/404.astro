---
import MainLayout from "@layouts/MainLayout.astro";
import { META_PAGES } from "@consts/metaPages";
import { ButtonPrimary } from "@components/buttons/ButtonPrimary";
---

<MainLayout
  title={META_PAGES.NOT_FOUND.title}
  description={META_PAGES.NOT_FOUND.description}
>
  <main class="text-center py-24 min-h-[90vh] flex flex-col place-items-center">
    <section class="my-auto">
      <h1 class="text-6xl font-bold mb-4">404</h1>
      <h2 class="text-2xl mb-4">Página no encontrada</h2>
      <p class="mb-8 max-w-[45ch]">
        Lo sentimos, pero la página que estás buscando no existe. Puede haber sido
        movida o eliminada.
      </p>
      <ButtonPrimary href="/" style="mx-auto">Volver al Inicio</ButtonPrimary>
    </section>
  </main>
</MainLayout>
