---
import About from "@components/sections/About.astro";
import Hero from "@components/sections/Hero.astro";
import Services from "@components/sections/Services.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { SliderBanner } from "@components/sliders/SliderBanner.jsx";
import SliderBrands from "@components/sliders/SliderBrands.astro";
import { CategoryProducts } from "@components/products/CategoryProducts.jsx";
import { META_PAGES } from "@consts/metaPages";
