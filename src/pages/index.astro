<MainLayout
	title={META_PAGES.HOME.title}
	description={META_PAGES.HOME.description}
>
	<Hero />
	<About />
	<SliderBrands />
	<Services />
	<CategoryProducts client:visible />
	<SliderBanner client:visible />
</MainLayout>
