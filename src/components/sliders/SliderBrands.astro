---
import GroupBrands from "@components/GroupBrands.astro";
import GroupClients from "@components/GroupClients.astro";
import { ButtonSecondary } from "@components/buttons/ButtonSecondary.jsx";
---

<section
  class="company-logo-list  py-20"
  id="sections-company-logo-list"
  style="--companies: 10;"
>
  <div class="px-4 text-center w-full mx-auto">
    <h2 class="text-2xl sm:text-3xl font-bold text-center max-w-[60ch] mx-auto">
      <span class="text-green-600">Las mejores marcas</span> de protección contra
      incendios y la confianza de
      <span class="text-green-600">más de 10 grandes empresas.</span>
    </h2>
    <ButtonSecondary href="/empresa" style="mt-8 max-w-fit mx-auto">
      Conoce nuestros productos
    </ButtonSecondary>
  </div>
  <div class="company-logo-slider my-16">
    <GroupBrands />
    <GroupBrands />
    <GroupBrands />
    <GroupBrands />
  </div>
  <div class="client-logo-slider">
    <GroupClients />
    <GroupClients />
    <GroupClients />
    <GroupClients />
  </div>
</section>

<style scoped>
  section {
    display: block;
    unicode-bidi: isolate;
  }
  .company-logo-list {
    width: 100%;
    overflow: hidden;
    position: relative;
    margin: auto;
  }
  .company-logo-list:before {
    left: 0;
    top: 0;
  }
  .company-logo-list:after {
    right: 0;
    top: 0;
    transform: rotate(180deg);
  }
  .company-logo-list:after,
  .company-logo-list:before {
    content: "";
    height: 112px;
    position: absolute;
    width: 200px;
    z-index: 2;
  }
  .company-logo-slider {
    height: 50px;
    display: flex;
    max-height: 50px;
    gap: 4rem;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .client-logo-list {
    width: 100%;
    overflow: hidden;
    position: relative;
    margin: auto;
    padding: 1rem 0;
  }
  .client-logo-list:before {
    left: 0;
    top: 0;
  }
  .client-logo-list:after {
    right: 0;
    top: 0;
    transform: rotate(180deg);
  }
  .client-logo-list:after,
  .client-logo-list:before {
    content: "";
    height: 112px;
    position: absolute;
    width: 200px;
    z-index: 2;
  }
  .client-logo-slider {
    height: 50px;
    display: flex;
    max-height: 50px;
    gap: 4rem;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
</style>
