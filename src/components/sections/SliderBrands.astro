---
import ButtonSecondary from "@components/buttons/ButtonSecondary.astro";
import GroupBrands from "@components/GroupBrands.astro";
---

<section
  class="company-logo-list"
  id="sections-company-logo-list"
  style="--companies: 10;"
>
  <div class="company-logo-slider">
    <GroupBrands />
    <GroupBrands />
    <GroupBrands />
    <GroupBrands />
  </div>
  <div class="px-4 py-8 text-center w-full mx-auto">
    <h2 class="text-2xl sm:text-3xl font-bold text-center">
      <span class="text-green-600">Las mejores marcas</span> en sistemas de protecci√≥n
      contra incendios
    </h2>
    <ButtonSecondary href="/servicios" style="mt-8 max-w-fit mx-auto">
      Conoce nuestros productos
    </ButtonSecondary>
  </div>
</section>

<style scoped>
  section {
    display: block;
    unicode-bidi: isolate;
  }
  .company-logo-list {
    width: 100%;
    overflow: hidden;
    position: relative;
    margin: auto;
    padding: 1rem 0;
  }
  .company-logo-list:before {
    left: 0;
    top: 0;
  }
  .company-logo-list:after {
    right: 0;
    top: 0;
    transform: rotate(180deg);
  }
  .company-logo-list:after,
  .company-logo-list:before {
    content: "";
    height: 112px;
    position: absolute;
    width: 200px;
    z-index: 2;
  }
  .company-logo-slider {
    height: 50px;
    display: flex;
    max-height: 50px;
    gap: 4rem;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
</style>
